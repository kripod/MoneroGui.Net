<UserControl x:Class="Jojatekok.MoneroGUI.Views.OptionsWindow.PathsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Jojatekok.MoneroGUI.Controls">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Path=OptionsPathsDirectoryDaemonData, Source={StaticResource Resources}}" VerticalAlignment="Center" Margin="0 0 0 5"/>
        <controls:PathSelector Grid.Row="0" Grid.Column="2" x:Name="PathSelectorDirectoryDaemonData" Margin="0 0 0 5"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding Path=OptionsPathsFileAccountData, Source={StaticResource Resources}}" VerticalAlignment="Center" Margin="0 0 0 5"/>
        <controls:PathSelector Grid.Row="1" Grid.Column="2" x:Name="PathSelectorFileAccountData" Margin="0 0 0 5"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding Path=OptionsPathsDirectoryAccountBackups, Source={StaticResource Resources}}" VerticalAlignment="Center"/>
        <controls:PathSelector Grid.Row="2" Grid.Column="2" x:Name="PathSelectorDirectoryAccountBackups"/>

        <Separator Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="0 10"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="{Binding Path=OptionsPathsSoftwareDaemon, Source={StaticResource Resources}}" VerticalAlignment="Center" Margin="0 0 0 5"/>
        <controls:PathSelector Grid.Row="4" Grid.Column="2" x:Name="PathSelectorSoftwareDaemon" Margin="0 0 0 5"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="{Binding Path=OptionsPathsSoftwareAccountManager, Source={StaticResource Resources}}" VerticalAlignment="Center" Margin="0 0 0 5"/>
        <controls:PathSelector Grid.Row="5" Grid.Column="2" x:Name="PathSelectorSoftwareAccountManager" Margin="0 0 0 5"/>
    </Grid>
</UserControl>
