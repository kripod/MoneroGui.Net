<UserControl x:Class="Jojatekok.MoneroGUI.Views.OptionsWindow.GeneralView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <CheckBox x:Name="CheckBoxIsUriAssociationCheckEnabled" Margin="0 0 0 5">
            <TextBlock Text="{Binding Path=OptionsGeneralIsUriAssociationCheckEnabled, Source={StaticResource Resources}}" TextWrapping="Wrap"/>
        </CheckBox>
        <CheckBox x:Name="CheckBoxIsStartableOnSystemLogin" Content="{Binding Path=OptionsGeneralIsStartableOnSystemLogin, Source={StaticResource Resources}}" Margin="0 0 0 5"/>
        <CheckBox x:Name="CheckBoxIsSafeShutdownEnabled" Content="{Binding Path=OptionsGeneralIsSafeShutdownEnabled, Source={StaticResource Resources}}"/>
    </StackPanel>
</UserControl>
